{# receive a list and display each element #}
<div class="ui relaxed divided list">
    {% for object in objects|slice(0, max) %}
        <div class="item ">
            <a href="{{ path(object|entity~'_show', {'id': object.id}) }}">
                <li>{{ object.client }} ({{ object.created|date('d/m') }})
                    {{ object.done ? '<span class="ui green horizontal label">Class√©</span>' : '<span class="ui red horizontal label">En cours</span>' }}  </li>
            </a>
        </div>
    {% endfor  %}
</div>